<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đường viền màu trắng ở giữa -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng -->
        </shape>
    </item>
    <!-- Đường viền phía trên -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/light_gray" /> <!-- Màu và độ rộng của đường viền -->
        </shape>
    </item>
    <!-- Đường viền phía dưới -->
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/light_gray" /> <!-- Màu và độ rộng của đường viền -->
        </shape>
    </item>
</layer-list>