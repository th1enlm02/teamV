<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="#D0E9FD"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            >

            <ImageView
                android:id="@+id/iv_previousmonth"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:src="@drawable/ic_back_black"
                android:scaleType="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_MonthYear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text=""
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue4"
                android:textSize="22sp"/>

            <ImageView
                android:id="@+id/iv_nextmonth"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_next_black"
                android:scaleType="center"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_gray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="CN"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="T2"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"            android:layout_weight="1"
                android:text="T3"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"            android:layout_weight="1"
                android:text="T4"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"            android:layout_weight="1"
                android:text="T5"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"            android:layout_weight="1"
                android:text="T6"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/blue4"
                android:textColor="@color/white"            android:layout_weight="1"
                android:text="T7"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="16sp"/>


        </LinearLayout>

        <!--    <TextView-->
        <!--        android:id="@+id/textView"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="292dp"-->
        <!--        android:layout_marginRight="10dp"-->
        <!--        android:layout_marginLeft="10dp"-->
        <!--        />-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Calendar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

        <LinearLayout
            android:id="@+id/ll_task"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Các deadline trong ngày"
                android:textColor="@color/blue4"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@color/white"
                android:layout_margin="1dp"
                android:layout_marginTop="1dp"

                />
            <ListView

                android:id="@+id/lv_task_in_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/white"

                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:id="@+id/rl_dashboard"
            >
            <TextView
                android:id="@+id/chartname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê công việc tháng vừa qua"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <LinearLayout
                android:id="@+id/chartsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/chartname"
                >

                <!-- PieChart -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/pieChartCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_margin="5dp"
                    android:background="#80ADD8">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>






</ScrollView>
