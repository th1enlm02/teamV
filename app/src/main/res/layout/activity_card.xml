<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="11"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <View
                    android:id="@+id/view_transparent_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#30000000"
                    />
                <ImageView
                    android:id="@+id/iv_back_to_status_list"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_close"
                    />
                <ImageView
                    android:id="@+id/iv_card_option"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_option"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_card_background"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@color/in_process"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_change_card_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_card_background"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            >
                            <ImageView
                                android:id="@+id/iv_bg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_background"
                                android:layout_centerVertical="true"
                                />
                            <TextView
                                android:id="@+id/tv_bg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ảnh bìa"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_toRightOf="@id/iv_bg"
                                android:layout_centerVertical="true"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <RelativeLayout
                        android:id="@+id/rl_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_card_background"
                        android:background="@drawable/divider_top_bottom"
                        >
                        <TextView
                            android:id="@+id/tv_card_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card's name"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_in_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_name"
                            android:text="Trong bảng: Board's name"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:paddingBottom="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_name"
                        android:background="@drawable/divider_top_bottom"
                        >
                        <TextView
                            android:id="@+id/tv_card_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="5dp"
                            />
                        <EditText
                            android:id="@+id/et_card_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_description"
                            android:hint="Nhập mô tả"
                            android:textSize="13sp"
                            android:drawableLeft="@drawable/ic_description"
                            android:drawablePadding="10dp"
                            android:paddingTop="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="15dp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_description"
                        android:background="@drawable/divider_top_bottom"
                        android:orientation="vertical"
                        android:weightSum="3"
                        >
                        <TextView
                            android:id="@+id/tv_card_timeline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Timeline"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_clock"
                                />
                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Ngày bắt đầu..."
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            >
                            <ImageView
                                android:id="@+id/iv_is_checked_complete"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_checkbox"
                                android:visibility="invisible"
                                />
                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Ngày hết hạn..."
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_to_do_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_date"
                        android:orientation="vertical"
                        android:background="@drawable/divider_top_bottom"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_card_to_do_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To-do list"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:paddingTop="10dp"
                                    android:paddingStart="10dp"
                                    android:paddingBottom="5dp"
                                    />
                                <ImageView
                                    android:id="@+id/iv_card_to_do_list_option"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/ic_option_black"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_card_to_do_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_add_to_do_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                >
                                <ImageView
                                    android:id="@+id/iv_add_to_do_list"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_add_black"
                                    android:layout_centerVertical="true"
                                    />
                                <TextView
                                    android:id="@+id/tv_add_to_do_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Thêm mục..."
                                    android:textSize="13sp"
                                    android:textColor="@color/black"
                                    android:layout_toRightOf="@id/iv_add_to_do_list"
                                    android:layout_centerVertical="true"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_attached_file_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_to_do_list"
                        android:orientation="vertical"
                        android:background="@drawable/divider_top_bottom"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_card_attached_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Các tệp đính kèm"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:paddingTop="10dp"
                                    android:paddingStart="10dp"
                                    android:paddingBottom="5dp"
                                    />
                                <ImageView
                                    android:id="@+id/iv_card_attached_file_option"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/ic_option_black"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_card_attached_file_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>