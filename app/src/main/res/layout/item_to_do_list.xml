<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overdue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XoÃ¡"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_icon_delete_task"
            android:layout_marginEnd="5dp"
            />
        <ImageView
            android:id="@+id/iv_icon_delete_task"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_to_do_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5sp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/ll_checkbox_and_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_to_do_list_checkbox"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_checkbox"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_to_do_list_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task's name"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ll_checkbox_and_checked"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />
    </RelativeLayout>
</FrameLayout>