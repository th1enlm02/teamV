<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.AccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/blue5"/>
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/im_no_profile"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                />
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_alignBottom="@id/view_cover"
                android:layout_marginLeft="10dp"
                android:hint="Loading..."
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_below="@id/tv_fullname"
                android:background="@drawable/ic_email_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_email"
                android:layout_below="@id/tv_fullname"
                android:layout_marginLeft="10dp"
                android:hint="Loading..."
                android:textSize="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_decription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_alignLeft="@id/tv_fullname"
                android:hint="Loading..."
                android:inputType="textMultiLine"
                android:visibility="invisible"
                />
            <ImageView

                android:id="@+id/iv_edit_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/iv_avatar"
                android:background="@drawable/ic_edit_profile"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/tv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_edit_profile"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_edit_profile"
                android:text="Thông tin"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="10dp"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Giới tính: chưa có thông tin"
                    android:textSize="22dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mail"
                    />
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Tuổi: chưa có thông tin"
                    android:textSize="22dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_lock"
                    />
                <TextView
                    android:id="@+id/btn_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:text="Đổi mật khẩu"
                    android:gravity="center"

                    android:textSize="22dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_logout"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue5"
            android:text="Logout"
            android:layout_below="@id/tv_edit_profile"
            />
    </LinearLayout>
</ScrollView>